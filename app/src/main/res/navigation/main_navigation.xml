<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:startDestination="@+id/pokelist_destination">

    <fragment
        android:id="@+id/pokelist_destination"
        android:name="com.example.siberspoke.screens.pokelist.PokeListFragment"
        android:label="Pokemon List">
        <action
            android:id="@+id/action_pokelist_destination_to_pokeinfo_destination"
            app:destination="@+id/pokeinfo_destination"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_right"
            app:popExitAnim="@anim/slide_out_left" />
    </fragment>
    <fragment
        android:id="@+id/pokeinfo_destination"
        android:name="com.example.siberspoke.screens.pokeinfo.PokeInfoFragment"
        android:label="pokeinfo_fragment">
        <action
            android:id="@+id/action_pokeinfo_destination_to_pokelist_destination"
            app:destination="@id/pokelist_destination"
            app:enterAnim="@anim/slide_out_left"
            app:exitAnim="@anim/slide_in_right"
            app:popEnterAnim="@anim/slide_out_left"
            app:popExitAnim="@anim/slide_in_right" />
    </fragment>
</navigation>